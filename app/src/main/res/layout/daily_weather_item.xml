<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/dayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="일"
        android:textSize="14dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="6.26"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/dayOfWeek"
        app:layout_constraintStart_toEndOf="@+id/dayOfWeek"
        app:layout_constraintTop_toTopOf="@+id/dayOfWeek" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_wb_cloudy_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/dayOfWeek"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/dayOfWeek" />

    <TextView
        android:id="@+id/weatherInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="대체로 맑음"
        android:textSize="14dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tempMin"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/tempMin" />

    <TextView
        android:id="@+id/tempMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19℃"
        android:layout_marginEnd="16dp"
        android:textSize="14dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tempMax"
        app:layout_constraintEnd_toStartOf="@+id/tempMax"
        app:layout_constraintTop_toTopOf="@+id/tempMax" />

    <TextView
        android:id="@+id/tempMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="14dp"
        android:text="28℃"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>